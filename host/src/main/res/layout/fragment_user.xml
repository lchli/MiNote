<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#28b4a9"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"

            />

        <TextView
            android:id="@+id/user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="昵称"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/user_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="联系方式"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

    <com.lch.menote.user.widget.UserCenterListItem
        android:id="@+id/myCloudNoteView"
        style="@style/UserCenterListLayout"
        android:layout_marginTop="10dp"
        app:UserCenterListItem_icon="@drawable/ic_app_version"
        app:UserCenterListItem_text="我的云笔记" />

    <com.lch.menote.user.widget.UserCenterListItem
        android:id="@+id/app_version_widget"
        style="@style/UserCenterListLayout"
        app:UserCenterListItem_icon="@drawable/ic_app_version"
        app:UserCenterListItem_text="版本号：1.0" />

    <com.lch.menote.user.widget.UserCenterListItem
        android:id="@+id/check_update_widget"
        style="@style/UserCenterListLayout"
        app:UserCenterListItem_icon="@drawable/ic_check_update"
        app:UserCenterListItem_text="检查更新"

        />

    <com.lch.menote.user.widget.UserCenterListItem
        android:id="@+id/about_us_widget"
        style="@style/UserCenterListLayout"
        app:UserCenterListItem_icon="@drawable/ic_about_us"
        app:UserCenterListItem_text="关于我们"
        android:visibility="visible"

        />

    <com.lch.menote.user.widget.UserCenterListItem
        android:id="@+id/logout_widget"
        style="@style/UserCenterListLayout"
        app:UserCenterListItem_icon="@drawable/ic_logout"
        app:UserCenterListItem_text="退出登录"

        />

</LinearLayout>