<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#28b4a9"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"

            />

        <TextView
            android:id="@+id/user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="昵称"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

    <com.lch.menote.user.ui.UserCenterListItem
        android:id="@+id/about_app_widget"
        style="@style/UserCenterListLayout"
        android:layout_marginTop="10dp"
        app:UserCenterListItem_icon="@drawable/ic_delete_photo"
        app:UserCenterListItem_text="版本号：1.0  作者：老李" />

    <com.lch.menote.user.ui.UserCenterListItem
        android:id="@+id/check_update_widget"
        style="@style/UserCenterListLayout"
        app:UserCenterListItem_icon="@drawable/ic_delete_photo"
        app:UserCenterListItem_text="检查更新"

        />

    <com.lch.menote.user.ui.UserCenterListItem
        android:id="@+id/logout_widget"
        style="@style/UserCenterListLayout"
        app:UserCenterListItem_icon="@drawable/ic_delete_photo"
        app:UserCenterListItem_text="退出登录"

        />

</LinearLayout>