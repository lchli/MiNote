<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/course_thumb_imageView_parent"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/course_thumb_bg">

        <ImageView
            android:id="@+id/course_thumb_imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="0.5dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
             />

        <TextView
            android:id="@+id/course_userName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:text="New Text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/course_thumb_imageView_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/couse_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text="New Text" />

        <TextView
            android:id="@+id/course_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="New Text" />

        <TextView
            android:id="@+id/course_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/course_upload_button_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="云下载" />


    </LinearLayout>
</RelativeLayout>